}

.page__bd .page__scroll__btns {
  width: 170rpx;
  height: 16rpx;
  position: absolute;
  top: 354rpx;
  left: 280rpx;
}

.page__bd .page__scroll__btns .page__scroll__btn {
  float: left;
  display: inline-block;
  width: 14rpx;
